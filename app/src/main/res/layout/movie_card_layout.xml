<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView android:id="@+id/movie_card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/primaryDarkColor">

            <ImageView
                android:id="@+id/movie_card_poster"
                android:layout_width="100dp"
                android:layout_marginStart="5dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/secondaryLightColor">

                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/movie_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title:"
                    android:textSize="21sp"
                    android:textColor="@color/primaryDarkColor"/>

                <TextView
                    android:id="@+id/movie_card_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryDarkColor"
                    android:textSize="18sp"
                    android:text="@string/director"
                    android:layout_margin="10dp"/>


                <LinearLayout
                    android:id="@+id/movie_card_user_rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star_golden"/>

                    <TextView
                        android:id="@+id/movie_card_user_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_rating_text"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:textSize="17sp"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


